  "version": "0.2.0",
  "configurations": [
    {
      "name": "ospSceneGraph (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/ospTutorialSceneGraph",
      "args": [
        "~/Work/datasets/simple/bonsai.json"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [
        {
          "name": "LD_LIBRARY_PATH",
          "value": "${env:LD_LIBRARY_PATH}:${workspaceFolder}/build-deps/install/lib"
        }
      ],
      "MIMode": "gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ]
    },
